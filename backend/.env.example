APP_ENV=dev
APP_VERSION=1.0
APP_HOST=0.0.0.0
APP_PORT=8000

# Must be set; used for API key encryption at rest.
APP_SECRET_KEY=change-me-to-a-long-random-secret
LOG_LEVEL=INFO

# Comma-separated local origins for frontend dev server.
CORS_ORIGINS=http://127.0.0.1:5500,http://localhost:5500
DB_URL=sqlite+aiosqlite:///./worldline.db

# Default session runtime settings
DEFAULT_POST_GEN_DELAY_SEC=5
DEFAULT_TICK_LABEL=1个月

# Provider base URLs
OPENAI_BASE_URL=https://api.openai.com
DEEPSEEK_BASE_URL=https://api.deepseek.com
OLLAMA_BASE_URL=http://localhost:11434
GEMINI_BASE_URL=https://generativelanguage.googleapis.com

# Long-term memory (RAG) controls
MEMORY_MODE=off
MEMORY_MAX_SNIPPETS=8
MEMORY_MAX_CHARS=4000
EMBED_PROVIDER=deterministic
EMBED_MODEL=deterministic-v1
EMBED_DIM=64

# Optional when EMBED_PROVIDER=openai
EMBED_OPENAI_API_KEY=

# Event dice system (narrative volatility)
EVENT_DICE_ENABLED=true
EVENT_GOOD_EVENT_PROB=0.25
EVENT_BAD_EVENT_PROB=0.15
EVENT_MIN_EVENTS=1
EVENT_MAX_EVENTS=5
EVENT_DEFAULT_HEMISPHERE=north
